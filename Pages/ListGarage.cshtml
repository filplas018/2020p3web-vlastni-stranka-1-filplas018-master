@page
@model P3_app_plass.Pages.ListGarageModel

@{
    ViewData["Title"] = "ListGarage";
}

<h1>ListGarage</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Garage[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Garage[0].User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Garage) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.UserName)
            </td>
            <td>
                <a asp-page="./EditGarage" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./DetailGarage" asp-route-id="@item.Id">Open the Garage</a> |
                <a asp-page="./DeleteGarage" asp-route-id="@item.Id">Destroy the Garage</a>
            </td>
        </tr>
}
    </tbody>
</table>
